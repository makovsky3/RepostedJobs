{
  "manifest_version": 3,
  "name": "LinkedIn Job Repost Marker",
  "version": "1.0",
  "description": "Marks reposted job listings on LinkedIn with a red star",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
